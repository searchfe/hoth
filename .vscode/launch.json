{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Jest task",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "args": [
                // "packages/schema/__tests__",
                "packages/thread/__tests__",
                "--coverage=false"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Hoth Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/cli/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/packages/cli/dist/**/*.js"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/example/hoth-quickstart",
            "args": [
                "start",
                "--app-dir='dist'",
                "--app-name='myapp'",
                "--app-prefix='/myapp'"
            ]
        }
    ]
}